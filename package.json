{
  "name": "homepage",
  "version": "0.0.1",
  "description": "ybiquitous homepage",
  "author": "Masafumi Koba <ybiquitous@gmail.com>",
  "license": "MIT",
  "private": true,
  "repository": "ybiquitous/homepage",
  "engines": {
    "node": ">=11"
  },
  "scripts": {
    "build": "rm -rf public/ && cp -rf src/ public/ && npm run slide:build",
    "format": "npm-run-all --print-label --parallel lint:js:fix prettier:write",
    "lint": "npm-run-all --print-label --parallel lint:*",
    "lint:js": "eslint --ignore-path .gitignore --ext .js,.jsx,.mjs .",
    "lint:js:fix": "npm run lint:js -- --fix",
    "prettier:write": "prettier --write --ignore-path .gitignore \"**/*.{css,html,json,md,mdx,yaml,yml}\"",
    "slide:dev": "mdx-deck",
    "slide:build": "./scripts/build-slides"
  },
  "devDependencies": {
    "eslint-config-ybiquitous": "^7.2.0",
    "mdx-deck": "^1.8.2",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "ybiq": "^7.2.2"
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": [
      "ybiquitous"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,jsx,mjs}": [
        "eslint --fix --no-ignore",
        "git add"
      ],
      "*.{css,html}": [
        "stylelint"
      ],
      "*.{css,html,json,md,mdx,yaml,yml}": [
        "prettier --write",
        "git add"
      ]
    }
  }
}
