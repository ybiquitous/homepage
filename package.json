{
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "prestart": "npm run build:blog",
    "start": "webpack serve --mode=development --node-env=development --stats=minimal",
    "start:open": "npm run start -- --open",
    "analyze": "webpack --analyze --mode=production",
    "build:blog": "node src/remark/metadata-generator.js",
    "build:webpack": "webpack build --mode=production --node-env=production",
    "build:slides": "rm -rf dist/slides && mkdir -p dist/slides && cp -R src/slides-build/* dist/slides/",
    "build": "ybiq run --npm build:blog build:webpack build:slides",
    "postbuild": "cp -v _redirects dist/",
    "static": "npm run build && npx http-server ./dist",
    "format": "ybiq run --npm lint:md:fix lint:styles:fix",
    "lint": "ybiq run --npm lint:md lint:types lint:styles",
    "lint:md": "remark .",
    "lint:md:fix": "remark . --output",
    "lint:types": "tsc --noEmit",
    "lint:types:watch": "npm run lint:types -- --watch",
    "lint:styles": "npm run prettier -- --check",
    "lint:styles:fix": "npm run prettier -- --write",
    "prettier": "prettier --cache .",
    "preeslint": "npm run build:blog",
    "eslint": "eslint --cache",
    "eslint:fix": "npm run eslint -- --fix",
    "test": "ybiq run --npm lint build",
    "test:visual": "percy snapshot test/percy-snapshots.yml --base-url \"http://localhost:8080\"",
    "stylelint-install": "npm install stylelint@15 stylelint-config-standard@34 stylelint-high-performance-animation @ronilaukkarinen/stylelint-a11y",
    "blog-new": "node ./scripts/new-blog-post.js"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-brands-svg-icons": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@fortawesome/react-fontawesome": "^3.1.1",
    "highlight.js": "^11.11.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@jsdevtools/rehype-toc": "^3.0.2",
    "@percy/cli": "^1.31.7",
    "@tailwindcss/postcss": "^4.1.18",
    "@tsconfig/strictest": "^2.0.8",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "babel-loader": "^10.0.0",
    "babel-plugin-macros": "^3.1.0",
    "copy-webpack-plugin": "^13.0.1",
    "core-js": "^3.47.0",
    "css-loader": "^7.1.2",
    "cssnano": "^7.1.2",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "html-webpack-plugin": "^5.6.5",
    "mdast-util-assert": "^5.0.0",
    "mini-css-extract-plugin": "^2.9.4",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-highlight": "^7.0.2",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-github-blockquote-alert": "^2.0.1",
    "remark-parse": "^11.0.0",
    "remark-preset-ybiquitous": "^0.5.1",
    "remark-rehype": "^11.1.2",
    "remark-stringify": "^11.0.0",
    "tailwindcss": "^4.0.14",
    "to-vfile": "^8.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "webpack": "^5.104.1",
    "webpack-bundle-analyzer": "^5.1.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.3",
    "yaml": "^2.8.2",
    "ybiq": "^21.0.3"
  },
  "stylelint": {
    "ignoreFiles": [
      "dist/**/*",
      "node_modules/**/*",
      "src/slides-build/**/*"
    ],
    "extends": [
      "stylelint-config-standard",
      "@ronilaukkarinen/stylelint-a11y/recommended"
    ],
    "plugins": [
      "stylelint-high-performance-animation"
    ],
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "apply",
            "config",
            "custom-variant"
          ]
        }
      ],
      "declaration-block-no-duplicate-properties": true,
      "declaration-property-value-disallowed-list": {
        "font-family": [
          "var(--font-family-serif)",
          "var(--font-family-sans-serif)",
          "var(--font-family-monospace)"
        ],
        "font-size": [
          "inherit",
          "/^calc\\(.+\\)$/",
          "var(--font-size-base)",
          "var(--font-size-l)",
          "var(--font-size-s)",
          "var(--font-size-h1)",
          "var(--font-size-h2)",
          "var(--font-size-h3)",
          "var(--font-size-h4)",
          "var(--font-size-h5)",
          "var(--font-size-h6)",
          "var(--font-size-code)"
        ]
      },
      "media-feature-name-value-allowed-list": {
        "max-width": [
          "575px",
          "1199px"
        ],
        "min-width": [
          "576px",
          "1200px"
        ]
      },
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "a11y/media-prefers-reduced-motion": null,
      "plugin/no-low-performance-animation-properties": true
    }
  },
  "lint-staged": {
    "!(**/*.{jpg,png,snap}|.husky/**)": "prettier --cache --write",
    "!(CHANGELOG).md": "remark --frail",
    "*.{js,jsx,cjs,mjs,ts,tsx}": "eslint --cache --fix"
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-ybiquitous"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-react",
        {
          "runtime": "automatic"
        }
      ],
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "usage",
          "corejs": "3.41"
        }
      ]
    ],
    "plugins": [
      "macros"
    ]
  },
  "babelMacros": {
    "fontawesome-svg-core": {
      "license": "free"
    }
  },
  "browserslist": "> 1%, not op_mini all",
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "overrides": {
    "conventional-changelog-conventionalcommits": "^9.1.0"
  }
}
