{
  "private": true,
  "scripts": {
    "start": "parcel src/index.html",
    "build:parcel": "parcel build src/index.html --no-autoinstall --no-cache --no-source-maps",
    "build:slide": "rm -rf dist/slides && mkdir -p dist/slides && cp -R src/slides-build/* dist/slides/",
    "build": "npm-run-all --print-label --parallel build:*",
    "postbuild": "cp -v _redirects dist/",
    "format": "npm-run-all --print-label --parallel lint:*:fix prettier:write",
    "lint": "npm-run-all --print-label --parallel lint:* prettier:check",
    "lint:md": "remark .",
    "lint:md:fix": "remark . --output",
    "lint:types": "tsc --noEmit",
    "prettier": "prettier .",
    "prettier:check": "npm run prettier -- --check",
    "prettier:write": "npm run prettier -- --write"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@fortawesome/free-brands-svg-icons": "^5.15.3",
    "@fortawesome/free-solid-svg-icons": "^5.15.3",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "highlight.js": "^11.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-react": "^7.14.5",
    "@types/marked": "^2.0.3",
    "@types/node": "^15.6.1",
    "@types/parcel-bundler": "^1.12.3",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.7",
    "@ybiquitous/parcel-plugin-markdown": "file:src/parcel/plugin-markdown",
    "autoprefixer": "^9.8.6",
    "marked": "^2.0.7",
    "parcel-bundler": "^1.12.5",
    "postcss-custom-media": "^7.0.8",
    "postcss-modules": "^3.2.2",
    "postcss-nesting": "^7.0.1",
    "remark-preset-ybiquitous": "^0.0.4",
    "typescript": "^4.3.2",
    "ybiq": "^13.1.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "ybiquitous/browser",
      "ybiquitous/react",
      "ybiquitous/typescript"
    ],
    "ignorePatterns": [
      "coverage",
      "dist",
      "src/slides",
      "src/slides-build"
    ],
    "reportUnusedDisableDirectives": true,
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "env": {
      "es2020": true
    },
    "rules": {
      "sort-imports": "off",
      "import/extensions": "off",
      "import/no-unresolved": "warn",
      "import/prefer-default-export": "off",
      "react/display-name": "off",
      "react/jsx-key": "warn",
      "react/jsx-no-target-blank": "warn",
      "react/no-array-index-key": "warn",
      "react/react-in-jsx-scope": "off",
      "react/require-default-props": "warn",
      "@typescript-eslint/consistent-type-definitions": [
        "error",
        "type"
      ],
      "@typescript-eslint/explicit-function-return-type": "warn"
    },
    "overrides": [
      {
        "files": [
          "**/*.js"
        ],
        "rules": {
          "@typescript-eslint/explicit-function-return-type": "off",
          "@typescript-eslint/no-require-imports": "off",
          "@typescript-eslint/no-var-requires": "off"
        }
      }
    ]
  },
  "stylelint": {
    "ignoreFiles": [
      "dist/**/*",
      "node_modules/**/*",
      "src/slides-build/**/*"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-a11y/recommended"
    ],
    "plugins": [
      "stylelint-high-performance-animation"
    ],
    "rules": {
      "declaration-block-no-duplicate-properties": true,
      "declaration-block-trailing-semicolon": null,
      "declaration-property-value-whitelist": {
        "font-family": [
          "var(--font-family-serif)",
          "var(--font-family-sans-serif)",
          "var(--font-family-monospace)"
        ],
        "font-size": [
          "inherit",
          "/^calc\\(.+\\)$/",
          "var(--font-size-base)",
          "var(--font-size-l)",
          "var(--font-size-s)",
          "var(--font-size-h1)",
          "var(--font-size-h2)",
          "var(--font-size-h3)",
          "var(--font-size-h4)",
          "var(--font-size-h5)",
          "var(--font-size-h6)",
          "var(--font-size-code)"
        ]
      },
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "a11y/media-prefers-reduced-motion": null,
      "plugin/no-low-performance-animation-properties": true
    }
  },
  "postcss": {
    "modules": true,
    "plugins": [
      "autoprefixer",
      "postcss-nesting",
      "postcss-custom-media"
    ]
  },
  "lint-staged": {
    "!(*.snap)": "prettier --write",
    "!(CHANGELOG).md": "remark --frail"
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-ybiquitous"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-react",
        {
          "runtime": "automatic"
        }
      ]
    ]
  }
}
