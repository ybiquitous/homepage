{
  "private": true,
  "scripts": {
    "start": "webpack serve --mode=development --node-env=development",
    "build:webpack": "webpack build --mode=production --node-env=production",
    "build:slides": "rm -rf dist/slides && mkdir -p dist/slides && cp -R src/slides-build/* dist/slides/",
    "build": "npm-run-all --print-label build:webpack build:slides",
    "postbuild": "cp -v _redirects dist/",
    "static": "npm run build && npx http-server ./dist",
    "format": "npm-run-all --print-label --parallel lint:*:fix prettier:write",
    "lint-ci": "npm-run-all --silent --parallel lint:* prettier:check",
    "lint": "npm-run-all --print-label --parallel lint:* prettier:check",
    "lint:md": "remark .",
    "lint:md:fix": "remark . --output",
    "lint:types": "tsc --noEmit",
    "lint:types:watch": "npm run lint:types -- --watch",
    "prettier": "prettier .",
    "prettier:check": "npm run prettier -- --check",
    "prettier:write": "npm run prettier -- --write",
    "eslint": "eslint --cache --ext=js,jsx,cjs,mjs,ts,tsx .",
    "eslint:fix": "npm run eslint -- --fix"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-brands-svg-icons": "^5.15.4",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/react-fontawesome": "^0.1.15",
    "highlight.js": "^11.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@types/node": "^16.6.1",
    "@types/react": "^17.0.18",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "autoprefixer": "^10.3.1",
    "babel-loader": "^8.2.2",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^6.2.0",
    "css-minimizer-webpack-plugin": "^3.0.2",
    "eslint-config-ybiquitous": "^14.0.1",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.2",
    "mini-css-extract-plugin": "^2.2.0",
    "postcss": "^8.3.6",
    "postcss-loader": "^6.1.1",
    "remark-autolink-headings": "^6.1.0",
    "remark-external-links": "^8.0.0",
    "remark-footnotes": "^3.0.0",
    "remark-gfm": "^1.0.0",
    "remark-highlight.js": "^6.0.0",
    "remark-html": "^13.0.1",
    "remark-loader": "^4.0.0",
    "remark-preset-ybiquitous": "^0.0.5",
    "remark-slug": "^6.1.0",
    "style-loader": "^3.2.1",
    "tailwindcss": "^2.2.9",
    "typescript": "^4.4.2",
    "unist-util-visit": "^2.0.3",
    "webpack": "^5.50.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "ybiq": "^13.2.1"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "ybiquitous/browser",
      "ybiquitous/react",
      "ybiquitous/typescript"
    ],
    "ignorePatterns": [
      "coverage",
      "dist",
      "tmp",
      "src/slides",
      "src/slides-build"
    ],
    "reportUnusedDisableDirectives": true,
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "env": {
      "es2020": true
    },
    "rules": {
      "sort-imports": "off",
      "import/extensions": "off",
      "import/no-internal-modules": "off",
      "import/no-unresolved": "warn",
      "import/prefer-default-export": "off",
      "react/display-name": "off",
      "react/jsx-key": "warn",
      "react/jsx-no-target-blank": "warn",
      "react/no-array-index-key": "warn",
      "react/prop-types": "off",
      "react/react-in-jsx-scope": "off",
      "react/require-default-props": "warn",
      "@typescript-eslint/consistent-type-definitions": [
        "error",
        "type"
      ],
      "@typescript-eslint/explicit-function-return-type": "warn"
    },
    "overrides": [
      {
        "files": [
          "*.js",
          "*.jsx"
        ],
        "rules": {
          "@typescript-eslint/explicit-function-return-type": "off",
          "@typescript-eslint/explicit-module-boundary-types": "off",
          "@typescript-eslint/no-require-imports": "off",
          "@typescript-eslint/no-var-requires": "off"
        }
      },
      {
        "files": [
          "*.jsx"
        ],
        "rules": {
          "@typescript-eslint/prefer-readonly-parameter-types": "off"
        }
      }
    ]
  },
  "stylelint": {
    "ignoreFiles": [
      "dist/**/*",
      "node_modules/**/*",
      "src/slides-build/**/*"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-a11y/recommended"
    ],
    "plugins": [
      "stylelint-high-performance-animation"
    ],
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "layer",
            "variants",
            "responsive",
            "screen"
          ]
        }
      ],
      "declaration-block-no-duplicate-properties": true,
      "declaration-block-trailing-semicolon": null,
      "declaration-property-value-whitelist": {
        "font-family": [
          "var(--font-family-serif)",
          "var(--font-family-sans-serif)",
          "var(--font-family-monospace)"
        ],
        "font-size": [
          "inherit",
          "/^calc\\(.+\\)$/",
          "var(--font-size-base)",
          "var(--font-size-l)",
          "var(--font-size-s)",
          "var(--font-size-h1)",
          "var(--font-size-h2)",
          "var(--font-size-h3)",
          "var(--font-size-h4)",
          "var(--font-size-h5)",
          "var(--font-size-h6)",
          "var(--font-size-code)"
        ]
      },
      "media-feature-name-value-allowed-list": {
        "max-width": [
          "575px",
          "1199px"
        ],
        "min-width": [
          "576px",
          "1200px"
        ]
      },
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "a11y/media-prefers-reduced-motion": null,
      "plugin/no-low-performance-animation-properties": true
    }
  },
  "postcss": {
    "plugins": [
      "tailwindcss/nesting",
      "tailwindcss",
      "autoprefixer"
    ]
  },
  "lint-staged": {
    "!(*.snap)": "prettier --write",
    "!(CHANGELOG).md": "remark --frail"
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-ybiquitous"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-react",
        {
          "runtime": "automatic"
        }
      ]
    ]
  }
}
