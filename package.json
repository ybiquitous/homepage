{
  "name": "homepage",
  "version": "0.0.1",
  "description": "ybiquitous homepage",
  "author": "Masafumi Koba <ybiquitous@gmail.com>",
  "license": "MIT",
  "private": true,
  "repository": "ybiquitous/homepage",
  "scripts": {
    "dev": "parcel src/index.html",
    "build:ts": "tsc",
    "build:ts:watch": "tsc --watch",
    "build:parcel": "parcel build src/index.html --no-autoinstall --no-cache --no-source-maps",
    "build": "npm-run-all --print-label --parallel build:* slide:build",
    "postbuild": "cp -v _redirects dist/",
    "format": "npm-run-all --print-label --parallel lint:*:fix prettier:write",
    "lint": "npm-run-all --print-label --parallel lint:* prettier:check",
    "lint:css": "stylelint --ignore-path .gitignore \"**/*.{css,html,tsx}\"",
    "lint:css:fix": "npm run lint:css -- --fix",
    "lint:js": "eslint .",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:md": "remark . --frail",
    "lint:md:fix": "remark . --output",
    "lint:types": "tsc --noEmit",
    "prettier": "prettier --ignore-path .gitignore .",
    "prettier:check": "npm run prettier -- --check",
    "prettier:write": "npm run prettier -- --write",
    "slide:dev": "mdx-deck",
    "slide:build": "./scripts/build-slides src/slides/ dist/slides/"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-brands-svg-icons": "^5.15.1",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "highlight.js": "^10.5.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0"
  },
  "devDependencies": {
    "@types/highlight.js": "^10.1.0",
    "@types/marked": "^1.2.2",
    "@types/node": "^14.14.17",
    "@types/parcel-bundler": "^1.12.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@ybiquitous/parcel-plugin-markdown": "file:src/parcel/plugin-markdown",
    "autoprefixer": "^9.8.6",
    "marked": "^1.2.7",
    "mdx-deck": "^2.5.1",
    "parcel-bundler": "^1.12.4",
    "postcss-custom-media": "^7.0.8",
    "postcss-modules": "^3.2.2",
    "postcss-nesting": "^7.0.1",
    "typescript": "^4.1.3",
    "ybiq": "^11.6.1"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "ybiquitous/browser",
      "ybiquitous/react",
      "ybiquitous/typescript"
    ],
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "rules": {
      "sort-imports": "off",
      "import/extensions": "off",
      "import/no-unresolved": "warn",
      "import/prefer-default-export": "off",
      "react/display-name": "off",
      "react/jsx-key": "warn",
      "react/jsx-no-target-blank": "warn",
      "react/no-array-index-key": "warn",
      "react/require-default-props": "warn",
      "@typescript-eslint/consistent-type-definitions": [
        "error",
        "type"
      ],
      "@typescript-eslint/explicit-function-return-type": "warn"
    },
    "overrides": [
      {
        "files": [
          "**/*.js"
        ],
        "rules": {
          "@typescript-eslint/explicit-function-return-type": "off",
          "@typescript-eslint/no-require-imports": "off",
          "@typescript-eslint/no-var-requires": "off"
        }
      }
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-a11y/recommended"
    ],
    "plugins": [
      "stylelint-high-performance-animation"
    ],
    "rules": {
      "declaration-block-no-duplicate-properties": true,
      "declaration-block-trailing-semicolon": null,
      "declaration-property-value-whitelist": {
        "font-family": [
          "var(--font-family-serif)",
          "var(--font-family-sans-serif)",
          "var(--font-family-monospace)"
        ],
        "font-size": [
          "inherit",
          "/^calc\\(.+\\)$/",
          "var(--font-size-base)",
          "var(--font-size-l)",
          "var(--font-size-s)",
          "var(--font-size-h1)",
          "var(--font-size-h2)",
          "var(--font-size-h3)",
          "var(--font-size-h4)",
          "var(--font-size-h5)",
          "var(--font-size-h6)",
          "var(--font-size-code)"
        ]
      },
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "a11y/media-prefers-reduced-motion": null,
      "plugin/no-low-performance-animation-properties": true
    }
  },
  "postcss": {
    "modules": true,
    "plugins": [
      "autoprefixer",
      "postcss-nesting",
      "postcss-custom-media"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "!(*.snap)": "prettier --write",
    "!(CHANGELOG).md": "remark --frail"
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended",
      "lint-no-heading-punctuation",
      [
        "lint-list-item-bullet-indent",
        false
      ],
      [
        "lint-list-item-indent",
        false
      ],
      "validate-links"
    ]
  }
}
