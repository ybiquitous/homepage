{
  "private": true,
  "type": "module",
  "scripts": {
    "start": "webpack serve --mode=development --node-env=development",
    "analyze": "webpack --analyze --mode=production",
    "build:webpack": "webpack build --mode=production --node-env=production",
    "build:slides": "rm -rf dist/slides && mkdir -p dist/slides && cp -R src/slides-build/* dist/slides/",
    "build": "npm-run-all --print-label build:webpack build:slides",
    "postbuild": "cp -v _redirects dist/",
    "static": "npm run build && npx http-server ./dist",
    "format": "npm-run-all --print-label --parallel lint:*:fix",
    "lint-ci": "npm-run-all --silent --parallel lint:*",
    "lint": "npm-run-all --print-label --parallel lint:*",
    "lint:md": "remark .",
    "lint:md:fix": "remark . --output",
    "lint:types": "tsc --noEmit",
    "lint:types:watch": "npm run lint:types -- --watch",
    "lint:styles": "npm run prettier -- --check",
    "lint:styles:fix": "npm run prettier -- --write",
    "prettier": "prettier .",
    "eslint": "eslint --cache --ext=js,jsx,cjs,mjs,ts,tsx .",
    "eslint:fix": "npm run eslint -- --fix",
    "test:visual": "percy snapshot test/percy-snapshots.yml"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.1.1",
    "@fortawesome/free-brands-svg-icons": "^6.1.1",
    "@fortawesome/free-solid-svg-icons": "^6.1.1",
    "@fortawesome/react-fontawesome": "^0.1.18",
    "core-js": "^3.21.1",
    "highlight.js": "^11.4.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@jsdevtools/rehype-toc": "^3.0.2",
    "@percy/cli": "^1.0.0-beta.76",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^8.2.3",
    "babel-plugin-macros": "^3.1.0",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.6.0",
    "cssnano": "^5.1.0",
    "eslint-config-ybiquitous": "^15.0.0",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.5.3",
    "postcss": "^8.4.7",
    "postcss-loader": "^6.2.1",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-external-links": "^1.0.1",
    "rehype-highlight": "^5.0.2",
    "rehype-slug": "^5.0.1",
    "rehype-stringify": "^9.0.3",
    "remark": "^14.0.2",
    "remark-gfm": "^3.0.1",
    "remark-parse": "^10.0.1",
    "remark-preset-ybiquitous": "^0.1.2",
    "remark-rehype": "^10.1.0",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.6.2",
    "unified": "^10.1.1",
    "unist-util-visit": "^4.1.0",
    "webpack": "^5.69.1",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4",
    "ybiq": "^14.1.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "ybiquitous/browser",
      "ybiquitous/react",
      "ybiquitous/typescript"
    ],
    "ignorePatterns": [
      "coverage",
      "dist",
      "tmp",
      "src/slides-build",
      "src/remark/**"
    ],
    "reportUnusedDisableDirectives": true,
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "env": {
      "es2020": true
    },
    "rules": {
      "max-statements": "warn",
      "sort-imports": "off",
      "import/extensions": "off",
      "import/no-internal-modules": "off",
      "import/no-unresolved": "warn",
      "import/prefer-default-export": "off",
      "react/display-name": "off",
      "react/jsx-key": "warn",
      "react/jsx-no-target-blank": "warn",
      "react/no-array-index-key": "warn",
      "react/prop-types": "off",
      "react/react-in-jsx-scope": "off",
      "react/require-default-props": "warn",
      "@typescript-eslint/consistent-type-definitions": [
        "error",
        "type"
      ],
      "@typescript-eslint/explicit-function-return-type": "warn",
      "@typescript-eslint/no-implicit-any-catch": "off"
    },
    "overrides": [
      {
        "files": [
          "*.js",
          "*.jsx"
        ],
        "rules": {
          "@typescript-eslint/explicit-function-return-type": "off",
          "@typescript-eslint/explicit-module-boundary-types": "off",
          "@typescript-eslint/no-require-imports": "off",
          "@typescript-eslint/no-var-requires": "off"
        }
      },
      {
        "files": [
          "*.jsx"
        ],
        "rules": {
          "@typescript-eslint/prefer-readonly-parameter-types": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "**/*.cjs"
  ],
  "stylelint": {
    "ignoreFiles": [
      "dist/**/*",
      "node_modules/**/*",
      "src/slides-build/**/*"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-a11y/recommended",
      "stylelint-config-prettier"
    ],
    "plugins": [
      "stylelint-high-performance-animation"
    ],
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "layer",
            "variants",
            "responsive",
            "screen"
          ]
        }
      ],
      "declaration-block-no-duplicate-properties": true,
      "declaration-block-trailing-semicolon": null,
      "declaration-property-value-disallowed-list": {
        "font-family": [
          "var(--font-family-serif)",
          "var(--font-family-sans-serif)",
          "var(--font-family-monospace)"
        ],
        "font-size": [
          "inherit",
          "/^calc\\(.+\\)$/",
          "var(--font-size-base)",
          "var(--font-size-l)",
          "var(--font-size-s)",
          "var(--font-size-h1)",
          "var(--font-size-h2)",
          "var(--font-size-h3)",
          "var(--font-size-h4)",
          "var(--font-size-h5)",
          "var(--font-size-h6)",
          "var(--font-size-code)"
        ]
      },
      "media-feature-name-value-allowed-list": {
        "max-width": [
          "575px",
          "1199px"
        ],
        "min-width": [
          "576px",
          "1200px"
        ]
      },
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "a11y/media-prefers-reduced-motion": null,
      "plugin/no-low-performance-animation-properties": true
    }
  },
  "lint-staged": {
    "!(*.snap)": "prettier --write",
    "!(CHANGELOG).md": "remark --frail"
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-ybiquitous"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-react",
        {
          "runtime": "automatic"
        }
      ],
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "usage",
          "corejs": "3.21"
        }
      ]
    ],
    "plugins": [
      "macros"
    ]
  },
  "babelMacros": {
    "fontawesome-svg-core": {
      "license": "free"
    }
  },
  "browserslist": "> 1%",
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  }
}
