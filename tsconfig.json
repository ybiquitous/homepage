{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "resolvePackageJsonExports": true,
    "jsx": "react-jsx",
    "noEmit": true,
  },
  "include": ["src/**/*", "webpack.config.*", "tailwind.config.*", "postcss.config.*"],
  "exclude": ["src/slides-build/**/*"],
}
