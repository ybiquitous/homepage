{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "tests/**/*.ts",
    "webpack.config.*",
    "tailwind.config.*",
    "playwright.config.*"
  ],
  "exclude": ["src/slides-build/**/*"]
}
